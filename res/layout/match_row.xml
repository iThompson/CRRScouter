<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/MatchNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/matchNumNull"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/MatchTime"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/B3"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/R3"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/match_time"
        android:gravity="center"
        android:lines="2"
        android:text="@string/matchTimeNull"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="invisible" />

    <org.team639.scouting.TeamView
        android:id="@+id/R3"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="3dp"
        android:layout_toLeftOf="@id/MatchTime"
        android:background="@drawable/red_right"
        android:gravity="center"
        android:text="@string/teamNull"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/redAllianceText" />

    <org.team639.scouting.TeamView
        android:id="@+id/R2"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="3dp"
        android:layout_toLeftOf="@+id/R3"
        android:background="@drawable/red_mid"
        android:gravity="center"
        android:text="@string/teamNull"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/redAllianceText" />

    <org.team639.scouting.TeamView
        android:id="@+id/B3"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/R3"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="3dp"
        android:layout_toLeftOf="@id/MatchTime"
        android:background="@drawable/blue_right"
        android:gravity="center"
        android:text="@string/teamNull"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/blueAllianceText" />

    <org.team639.scouting.TeamView
        android:id="@+id/B2"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/B3"
        android:layout_alignBottom="@+id/B3"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="3dp"
        android:layout_toLeftOf="@+id/B3"
        android:background="@drawable/blue_mid"
        android:gravity="center"
        android:text="@string/teamNull"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/blueAllianceText" />

    <org.team639.scouting.TeamView
        android:id="@+id/R1"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="3dp"
        android:layout_toLeftOf="@+id/R2"
        android:background="@drawable/red_left"
        android:gravity="center"
        android:text="@string/teamNull"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/redAllianceText" />

    <org.team639.scouting.TeamView
        android:id="@+id/B1"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/B2"
        android:layout_alignBottom="@+id/B2"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="3dp"
        android:layout_toLeftOf="@+id/B2"
        android:background="@drawable/blue_left"
        android:gravity="center"
        android:text="@string/teamNull"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/blueAllianceText" />

    <TextView
        android:id="@+id/RScore"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/red_lose"
        android:gravity="center"
        android:text="@string/scoreNull"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/redAllianceText"
        android:visibility="visible" />

    <TextView
        android:id="@+id/BScore"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/B3"
        android:layout_alignBottom="@+id/B3"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/blue_lose"
        android:gravity="center"
        android:text="@string/scoreNull"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/blueAllianceText"
        android:visibility="visible" />

</RelativeLayout>